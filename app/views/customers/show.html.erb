<div class="container my-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user me-2"></i><%= @customer.name %></h1>
    <div>
      <%= link_to customers_path, class: "btn btn-outline-secondary me-2" do %>
        <i class="fas fa-arrow-left me-1"></i>Quay lại
      <% end %>
      <%= link_to new_order_path(phone: @customer.phone), class: "btn btn-primary me-2" do %>
        <i class="fas fa-plus me-1"></i>Tạo đơn mới
      <% end %>
      <%= link_to edit_customer_path(@customer), class: "btn btn-warning" do %>
        <i class="fas fa-edit me-1"></i>Sửa khách hàng
      <% end %>
    </div>
  </div>

  <div class="row">
    <!-- Customer Info -->
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin khách hàng</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Tên:</strong>
            <p class="mb-1"><%= @customer.name %></p>
          </div>
          <div class="mb-3">
            <strong>Số điện thoại:</strong>
            <p class="mb-1"><%= @customer.phone %></p>
          </div>
          <div class="mb-3">
            <strong>Ngày tạo:</strong>
            <p class="mb-1"><%= @customer.created_at.strftime("%d/%m/%Y %H:%M") %></p>
          </div>
          <div class="mb-3">
            <strong>Tổng đơn hàng:</strong>
            <p class="mb-1">
              <span class="badge bg-primary fs-6"><%= @customer.orders.count %></span>
            </p>
          </div>
        </div>
      </div>

      <!-- Order Statistics -->
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Thống kê</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Đang xử lý:</strong>
            <span class="badge bg-warning"><%= @customer.orders.received.count %></span>
          </div>
          <div class="mb-3">
            <strong>Đang giặt:</strong>
            <span class="badge bg-info"><%= @customer.orders.washing.count %></span>
          </div>
          <div class="mb-3">
            <strong>Đã hoàn thành:</strong>
            <span class="badge bg-success"><%= @customer.orders.completed.count %></span>
          </div>
          <div class="mb-3">
            <strong>Tổng doanh thu:</strong>
            <p class="mb-1 text-success">
              <%= number_to_currency(@customer.orders.completed.sum(:total_amount), unit: "₫", separator: ",", delimiter: ".") %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Orders History -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><i class="fas fa-history me-2"></i>Lịch sử đơn hàng</h5>
        </div>
        <div class="card-body">
          <% if @orders.any? %>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead class="table-light">
                  <tr>
                    <th>ID</th>
                    <th>Loại giặt</th>
                    <th>Trạng thái</th>
                    <th>Cân nặng</th>
                    <th>Tổng tiền</th>
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td><strong>#<%= order.id %></strong></td>
                      <td><%= order.laundry_type_text %></td>
                      <td>
                        <% case order.status %>
                        <% when 'received' %>
                          <span class="badge bg-warning"><%= order.status_text %></span>
                        <% when 'washing' %>
                          <span class="badge bg-info"><%= order.status_text %></span>
                        <% when 'completed' %>
                          <span class="badge bg-success"><%= order.status_text %></span>
                        <% end %>
                      </td>
                      <td>
                        <%= order.weight.present? ? "#{order.weight}kg" : "-" %>
                      </td>
                      <td>
                        <%= order.total_amount.present? ? number_to_currency(order.total_amount, unit: "₫", separator: ",", delimiter: ".") : "-" %>
                      </td>
                      <td><%= order.created_at.strftime("%d/%m") %></td>
                      <td>
                        <%= link_to order_path(order), class: "btn btn-sm btn-outline-primary" do %>
                          <i class="fas fa-eye"></i>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-inbox fa-2x text-muted mb-3"></i>
              <p class="text-muted mb-0">Khách hàng chưa có đơn hàng nào.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
