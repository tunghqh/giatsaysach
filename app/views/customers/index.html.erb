<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users me-2"></i>Danh sách khách hàng</h1>
  </div>

  <!-- Search Form -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: customers_path, method: :get, local: true, class: "d-flex" do |form| %>
        <div class="flex-grow-1 me-2">
          <%= form.text_field :search, placeholder: "Tìm kiếm theo số điện thoại...",
                             value: params[:search], class: "form-control" %>
        </div>
        <div>
          <%= form.submit "Tìm kiếm", class: "btn btn-primary me-2" %>
          <%= link_to customers_path, class: "btn btn-outline-secondary" do %>
            <i class="fas fa-times"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Customers Table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Tên khách hàng</th>
              <th>Số điện thoại</th>
              <th>Tổng đơn hàng</th>
              <th>Đơn hàng gần nhất</th>
              <th>Ngày tạo</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><strong>#<%= customer.id %></strong></td>
                <td><%= customer.name %></td>
                <td><%= customer.phone %></td>
                <td>
                  <span class="badge bg-primary"><%= customer.orders_count %></span>
                </td>
                <td>
                  <% if customer.orders_count.to_i > 0 && customer.latest_order_created_at.present? %>
                    <%= customer.latest_order_created_at.strftime("%d/%m/%Y") %>
                  <% else %>
                    <span class="text-muted">Chưa có</span>
                  <% end %>
                </td>
                <td><%= customer.created_at.strftime("%d/%m/%Y") %></td>
                <td>
                  <div class="btn-group-sm" role="group">
                    <%= link_to customer_path(customer), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to new_order_path(phone: customer.phone), class: "btn btn-sm btn-outline-success" do %>
                      <i class="fas fa-plus"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          <div class="d-flex justify-content-center my-3">
            <%= raw(pagy_bootstrap_nav(@pagy)) if @pagy %>
          </div>

        <% if @customers.empty? %>
          <div class="text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <p class="text-muted">
              <% if params[:search].present? %>
                Không tìm thấy khách hàng nào với từ khóa "<%= params[:search] %>".
              <% else %>
                Chưa có khách hàng nào.
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
