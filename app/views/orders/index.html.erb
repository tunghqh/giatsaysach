<div class="container my-4">
  <div class="mb-4">
    <h1><i class="fas fa-list me-2"></i>Quản lý đơn hàng</h1>
  </div>

  <!-- Search Form -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: orders_path, method: :get, local: true, class: "row g-3" do |form| %>
        <div class="col-md-4">
          <%= form.text_field :search, value: params[:search],
              class: "form-control",
              placeholder: "Tìm theo SĐT hoặc tên khách hàng...",
              id: "search-input" %>
        </div>
        <div class="col-md-3">
          <%= form.select :status, options_for_select([
                ['Tất cả trạng thái', ''],
                ['Nhận đơn', 'received'],
                ['Đang giặt', 'washing'],
                ['Hoàn thành', 'completed'],
                ['Đã thanh toán', 'paid']
              ], params[:status]),
              {},
              { class: "form-select" } %>
        </div>
        <div class="col-md-3">
          <div class="input-group">
            <%= form.date_field :date, value: params[:date],
                class: "form-control",
                placeholder: "Chọn ngày..." %>
            <%= form.select :date_type, options_for_select([
                  ['Ngày tạo đơn', 'created_at'],
                  ['Ngày thanh toán', 'paid_at']
                ], params[:date_type] || 'created_at'),
                {},
                { class: "form-select", style: "max-width: 150px;" } %>
          </div>
        </div>
        <div class="col-md-2">
          <div class="btn-group w-100" role="group">
            <%= form.submit "Tìm kiếm", class: "btn btn-primary" %>
            <% if params[:search].present? || params[:date].present? %>
              <%= link_to orders_path, class: "btn btn-outline-secondary" do %>
                <i class="fas fa-times"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if params[:search].present? || params[:date].present? %>
        <div class="mt-3">
          <small class="text-muted">
            <i class="fas fa-info-circle me-1"></i>
            Đang hiển thị kết quả tìm kiếm
            <% if params[:search].present? %>
              cho "<strong><%= params[:search] %></strong>"
            <% end %>
            <% if params[:date].present? %>
              ngày <strong><%= Date.parse(params[:date]).strftime("%d/%m/%Y") %></strong>
            <% end %>
            - Tìm thấy <strong><%= @orders.count %></strong> đơn hàng
          </small>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Status Filter -->
  <div class="mb-4">
    <div class="btn-group" role="group">
      <%= link_to orders_path, class: "btn #{'btn-primary' if params[:status].blank?} #{'btn-outline-primary' unless params[:status].blank?}" do %>
        <i class="fas fa-th-list me-1"></i>Tất cả
      <% end %>
      <%= link_to orders_path(status: :received), class: "btn #{'btn-warning' if params[:status] == 'received'} #{'btn-outline-warning' unless params[:status] == 'received'}" do %>
        <i class="fas fa-clock me-1"></i>Nhận đơn
      <% end %>
      <%= link_to orders_path(status: :washing), class: "btn #{'btn-info' if params[:status] == 'washing'} #{'btn-outline-info' unless params[:status] == 'washing'}" do %>
        <i class="fas fa-sync-alt me-1"></i>Đang giặt
      <% end %>
      <%= link_to orders_path(status: :completed), class: "btn #{'btn-success' if params[:status] == 'completed'} #{'btn-outline-success' unless params[:status] == 'completed'}" do %>
        <i class="fas fa-check me-1"></i>Hoàn thành
      <% end %>
      <%= link_to orders_path(status: :paid), class: "btn #{'btn-primary' if params[:status] == 'paid'} #{'btn-outline-primary' unless params[:status] == 'paid'}" do %>
        <i class="fas fa-money-check-alt me-1"></i>Đã thanh toán
      <% end %>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Khách hàng</th>
              <th>SĐT</th>
              <th>Loại giặt</th>
              <th>Giặt riêng</th>
              <th>Trạng thái</th>
              <th>Thanh toán</th>
              <th>Cân nặng</th>
              <th>Tổng tiền</th>
              <th>Ngày tạo</th>
              <th>Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><strong>#<%= order.id %></strong></td>
                <td><%= order.customer_name %></td>
                <td><%= order.customer_phone %></td>
                <td><%= order.laundry_type_text %></td>
                <td>
                  <% if order.separate_whites? %>
                    <span class="badge bg-warning">Có</span>
                  <% else %>
                    <span class="badge bg-secondary">Không</span>
                  <% end %>
                </td>
                <td>
                  <% case order.status %>
                  <% when 'received' %>
                    <span class="badge bg-warning"><%= order.status_text %></span>
                  <% when 'washing' %>
                    <span class="badge bg-info"><%= order.status_text %></span>
                  <% when 'completed' %>
                    <span class="badge bg-success"><%= order.status_text %></span>
                  <% when 'paid' %>
                    <span class="badge bg-primary"><%= order.status_text %></span>
                  <% end %>
                </td>
                <td>
                  <% if order.payment_completed? %>
                    <span class="badge bg-success">
                      <i class="fas fa-check me-1"></i>Đã thanh toán
                    </span>
                    <% if order.payment_method.present? %>
                      <br><small class="text-muted"><%= order.payment_method == 'cash' ? 'Tiền mặt' : 'Chuyển khoản' %></small>
                    <% end %>
                  <% else %>
                    <span class="badge bg-danger">
                      <i class="fas fa-times me-1"></i>Chưa thanh toán
                    </span>
                  <% end %>
                </td>
                <td>
                  <%= order.weight.present? ? "#{order.weight}kg" : "-" %>
                </td>
                <td>
                  <%= order.total_amount.present? ? number_to_currency(order.final_total_amount, unit: "₫", separator: ",", delimiter: ".") : "-" %>
                </td>
                <td><%= order.created_at.strftime("%d/%m/%Y %H:%M") %></td>
                <td>
                  <div class="btn-group-sm" role="group">
                    <%= link_to order_path(order), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <% if current_user.can_edit_orders? %>
                      <%= link_to edit_order_path(order), class: "btn btn-sm btn-outline-secondary" do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                    <% end %>
                    <% if current_user.can_delete_orders? %>
                      <%= link_to order_path(order), class: "btn btn-sm btn-outline-danger",
                          data: {
                            turbo_method: :delete,
                            confirm: "Bạn có chắc chắn muốn xóa đơn hàng ##{order.id}?"
                          } do %>
                        <i class="fas fa-trash"></i>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @orders.empty? %>
          <div class="text-center py-5">
            <% if params[:search].present? || params[:date].present? %>
              <i class="fas fa-search fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">Không tìm thấy đơn hàng nào</h5>
              <p class="text-muted">Thử thay đổi từ khóa tìm kiếm hoặc bộ lọc</p>
              <%= link_to orders_path, class: "btn btn-outline-primary" do %>
                <i class="fas fa-list me-2"></i>Xem tất cả đơn hàng
              <% end %>
            <% else %>
              <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">Chưa có đơn hàng nào</h5>
              <p class="text-muted">Sử dụng nút "Tạo đơn hàng" trên thanh navigation để tạo đơn mới.</p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search-input');

  if (searchInput) {
    // Auto focus search input if there's a search term
    if (searchInput.value) {
      searchInput.focus();
      searchInput.setSelectionRange(searchInput.value.length, searchInput.value.length);
    }

    // Add search shortcuts
    searchInput.addEventListener('keydown', function(e) {
      // Clear search with Esc
      if (e.key === 'Escape') {
        e.target.value = '';
        e.target.form.submit();
      }
    });

    // Add placeholder animation on focus
    searchInput.addEventListener('focus', function() {
      this.placeholder = 'Nhập số điện thoại hoặc tên khách hàng...';
    });

    searchInput.addEventListener('blur', function() {
      this.placeholder = 'Tìm theo SĐT hoặc tên khách hàng...';
    });
  }

  // Highlight search terms in results
  const searchTerm = '<%= j(params[:search] || "") %>';
  if (searchTerm.length > 0) {
    highlightSearchTerms(searchTerm);
  }
});

function highlightSearchTerms(term) {
  const regex = new RegExp(`(${term})`, 'gi');
  const cells = document.querySelectorAll('td:nth-child(2), td:nth-child(3)'); // Customer name and phone columns

  cells.forEach(cell => {
    if (cell.textContent.toLowerCase().includes(term.toLowerCase())) {
      cell.innerHTML = cell.innerHTML.replace(regex, '<mark class="bg-warning">$1</mark>');
    }
  });
}
</script>
