<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    * {
        box-sizing: border-box;
        -webkit-print-color-adjust: exact;
      }

      body {
        font-family: 'Courier New', monospace;
        font-size: 14px;
        color: #000;
        margin: 0;
        padding: 0;
        background: #fff;
        font-weight: 500;
      }

      .invoice-container {
        width: 72mm; /* chuẩn máy in 80mm */
        margin: 0 auto;
        padding: 8px;
      }

      .center {
        text-align: center;
      }

      .header {
        margin-bottom: 8px;
        border-bottom: 1px dashed #000;
        padding-bottom: 5px;
      }

      .logo {
        font-size: 18px;
        margin-bottom: 3px;
        text-align: center;
        letter-spacing: 2px;
        font-weight: bold;
        color: #000;
      }

      .order-number {
        font-size: 32px;
        text-align: center;
        margin: 8px 0;
        font-weight: bold;
        color: #000;
      }

      .customer-name {
        margin-top: 5px;
        font-size: 14px;
        font-weight: bold;
        color: #000;
      }

      .service-details {
        margin-top: 8px;
        color: #000;
      }

      .service-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2px;
        font-size: 14px;
        color: #000;
      }

      .service-row span:first-child {
        flex: 1;
      }

      .service-row span:last-child {
        flex-shrink: 0;
        text-align: right;
      }

      .divider {
        border-top: 1px dashed #000;
        margin: 6px 0;
      }

      .total-amount {
        text-align: center;
        font-size: 16px;
        border-top: 2px solid #000;
        border-bottom: 2px solid #000;
        padding: 5px 0;
        margin: 10px 0;
        font-weight: bold;
        color: #000;
      }

      .qr-section {
        text-align: center;
        margin: 10px 0;
      }

      .qr-section img {
        width: 100px;
        height: 100px;
        object-fit: contain;
        border: 1px solid #ccc;
        padding: 3px;
      }

      .footer {
        text-align: center;
        border-top: 1px dashed #000;
        padding-top: 5px;
        margin-top: 10px;
        font-size: 12px;
        line-height: 1.4;
        color: #000;
        font-weight: 500;
      }

      @media print {
        @page {
          size: 72mm auto;
          margin: 0;
        }
        body {
          margin: 0;
          color: #000;
        }
        .invoice-container {
          padding: 5px;
        }
        .logo, .order-number, .customer-name, .service-row, .total-amount, .footer {
          color: #000 !important;
          font-weight: bold !important;
        }
      }
  </style>
</head>
<body>
  <div class="invoice-container">
    <!-- Header -->
    <div class="header">
      <div class="logo">GIẶT SẤY SẠCH</div>
      <div class="order-number">
        Đơn hàng <%= @order.id %>
      </div>
      <div class="customer-name"><%= @order.customer.name %> - <%= @order.customer.phone %></div>
    </div>

    <!-- Service Details -->
    <div class="service-details">
      <div class="service-row">
        <span>Loại giặt:</span>
        <span><%= @order.laundry_type == 'clothes' ? 'QUẦN ÁO' :
                   @order.laundry_type == 'blanket' ? 'CHĂN MỀN' :
                    @order.laundry_type == 'topper' ? 'TOPPER' :
                    @order.laundry_type == 'wet_dry' ? 'GIẶT ƯỚT/ SẤY KHÔ' :
                    @order.laundry_type == 'curtain' ? 'RÈM' :
                    @order.laundry_type == 'vest' ? 'ÁO VEST/ DẠ' :
                    @order.laundry_type == 'shoes' ? 'GIÀY' :
                    @order.laundry_type == 'spa_towel' ? 'KHĂN SPA' :
                    @order.laundry_type == 'bleach_clothes' ? 'TẨY QUẦN ÁO' : 'KHÁC' %></span>
      </div>

      <div class="service-row">
        <span>Cân nặng/Số lượng:</span>
        <span><%= @order.weight %> kg</span>
      </div>

      <div class="service-row">
        <span>Đơn giá:</span>
        <span><%= unit_price_special(@order.laundry_type, @order.weight, @order.total_amount) %></span>
      </div>

      <div class="service-row">
        <span>Thành tiền:</span>
        <span><%= number_to_currency(@order.total_amount.to_i, unit: "đ", delimiter: ".", precision: 0, format: "%n%u") %></span>
      </div>

      <div class="service-row">
        <span>Phí ship:</span>
        <span><%= number_to_currency((@order.shipping_fee).to_i, unit: "đ", delimiter: ".", precision: 0, format: "%n%u") %></span>
      </div>

      <div class="service-row">
        <span>Phụ thu:</span>
        <span><%= number_to_currency((@order.extra_fee).to_i, unit: "đ", delimiter: ".", precision: 0, format: "%n%u") %></span>
      </div>
    </div>

    <!-- Total Amount -->
    <div class="total-amount">
      Tổng cộng: <%= number_to_currency((@order.final_total_amount).to_i, unit: "đ", delimiter: ".", precision: 0, format: "%n%u") %>
    </div>

    <!-- QR Code for VPBank transfer (VietQR) -->
    <div style="text-align:center; margin: 16px 0 8px 0;">
      <%# Số tài khoản VPBank %>
      <% account_number = '0363324152' %>
      <% qr_url = vietqr_payload_vpbank(account_number: account_number, amount: @order.final_total_amount.to_i, add_info: "Giặt sấy sạch - #{@order.id}") %>
      <img src="<%= qr_url %>" alt="QR chuyển khoản VPBank" style="width:120px; height:120px; object-fit:contain; border:1px solid #eee; padding:4px; background:#fff;" />
      <div style="font-size:12px; margin-top:4px;">Quét mã để chuyển khoản</div>
    </div>

    <!-- Footer -->
    <div class="footer">
      <div>Giặt sấy sạch</div>
      <div><i class="fas fa-map-marker-alt me-2"></i> 99 Phan Thanh, Thanh Khê, Đà Nẵng</div>
      <div><i class="fas fa-phone me-2"></i> 0926 805 916</div>
      <div style="margin-top: 10px; font-weight: bold; font-size: 14px;">Cảm ơn quý khách!</div>
    </div>
  </div>
</body>
</html>