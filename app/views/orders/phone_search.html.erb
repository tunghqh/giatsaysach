<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center bg-primary text-white">
          <h4><i class="fas fa-search me-2"></i>Tìm kiếm khách hàng</h4>
        </div>
        <div class="card-body">
          <form id="phone-search-form">
            <div class="mb-3">
              <label for="phone" class="form-label">Số điện thoại khách hàng</label>
              <input type="text" class="form-control form-control-lg" id="phone" name="phone"
                     placeholder="Nhập số điện thoại..." required>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-search me-2"></i>Tìm kiếm
              </button>
            </div>
          </form>

          <div id="search-result" class="mt-3" style="display: none;">
            <div class="alert alert-info">
              <strong>Khách hàng đã tồn tại:</strong>
              <div id="customer-info"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.getElementById('phone-search-form').addEventListener('submit', function(e) {
  e.preventDefault();

  const phone = document.getElementById('phone').value;

  if (phone.trim() === '') {
    alert('Vui lòng nhập số điện thoại');
    return;
  }

  // Redirect to new order page with phone parameter
  window.location.href = '<%= new_order_path %>?phone=' + encodeURIComponent(phone);
});
</script>