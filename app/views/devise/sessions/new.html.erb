<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-lg">
        <div class="card-body p-5">
          <!-- Login Header -->
          <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-4x text-primary mb-3"></i>
            <h2 class="card-title text-primary">Đăng nhập</h2>
            <p class="text-muted">Vui lòng nhập thông tin của bạn</p>
          </div>

          <!-- Login Form -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                       html: { class: "needs-validation", novalidate: true }) do |f| %>

            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label :email, "Email", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "form-control",
                    placeholder: "Nhập email của bạn",
                    required: true %>
              </div>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label :password, "Mật khẩu", class: "form-label" %>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <%= f.password_field :password,
                    autocomplete: "current-password",
                    class: "form-control",
                    placeholder: "Nhập mật khẩu",
                    required: true %>
              </div>
            </div>

            <!-- Remember Me -->
            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Ghi nhớ đăng nhập", class: "form-check-label" %>
              </div>
            <% end %>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit "Đăng nhập",
                  class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <!-- Additional Links -->
          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .min-vh-100 {
    min-height: 100vh;
  }

  .card {
    border-radius: 15px;
    border: none;
  }

  .input-group-text {
    background-color: #f8f9fa;
    border-right: none;
  }

  .form-control {
    border-left: none;
  }

  .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
  }
</style>
